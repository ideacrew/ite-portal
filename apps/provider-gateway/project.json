{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/provider-gateway/src",
  "prefix": "dbh",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/provider-gateway",
        "index": "apps/provider-gateway/src/index.html",
        "main": "apps/provider-gateway/src/main.ts",
        "polyfills": "apps/provider-gateway/src/polyfills.ts",
        "tsConfig": "apps/provider-gateway/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          "apps/provider-gateway/src/favicon.ico",
          "apps/provider-gateway/src/assets"
        ],
        "styles": [
          "libs/theme/src/styles/global.scss",
          "apps/provider-gateway/src/styles.scss"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/provider-gateway/src/environments/environment.ts",
              "with": "apps/provider-gateway/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "provider-gateway:build:production"
        },
        "development": {
          "browserTarget": "provider-gateway:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "port": 4201
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "provider-gateway:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/provider-gateway/**/*.ts",
          "apps/provider-gateway/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/provider-gateway"],
      "options": {
        "jestConfig": "apps/provider-gateway/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "deploy:dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/apps/provider-gateway",
        "commands": [
          "aws s3 sync . s3://provider-gateway-dev-dbh-ite-com/ --delete",
          "invalidationId=`AWS_MAX_ATTEMPTS=999 aws cloudfront create-invalidation --distribution-id E37CU4MXO6RHYU --output text --query 'Invalidation.Id' --paths '/*'`",
          "aws cloudfront wait invalidation-completed --distribution-id E37CU4MXO6RHYU --id ${invalidationId}"
        ],
        "parallel": false
      }
    }
  },
  "tags": ["scope:app"]
}
